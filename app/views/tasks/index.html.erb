<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Check<br></th>
    <th>Title<br></th>
    <th>User<br></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><label><input type="checkbox" /></label></td>
    <td><%= task.title %></td>
    <td><%= task.user_id %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

